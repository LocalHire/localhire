<h1>Available Items</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Availbale For</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @search.items.sort{|a,b| b.updated_at <=> a.updated_at}.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.max_days_per_hire %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr> 
    <% end %>
  </tbody>
</table>

<%=link_to "Back to Search", new_search_path%>
<%=link_to "All Items", items_path%>
